{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    // uncomment line below to flag errors for implicit any types
    // "noImplicitAny": true,
    //uncomment line below for strict type checking. This will add 'use strict' to every file:
    // "alwaysStrict": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    // "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}