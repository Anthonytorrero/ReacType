{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "lib": ["es6", "dom", "es2017"],
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
